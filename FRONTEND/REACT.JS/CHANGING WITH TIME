import React from "react";
import ReactDOM from "react-dom";

const time=new Date().getHours();
const mystyle={
  color:"blue",
}
let ans;

if(time>0 && time<12){
  ans="MORNING";
  mystyle.color="red";
}
if(time>12 && time<18){
  ans="AFTERNOON";
  mystyle.color="green";
}
if(time>18 && time<24){
  ans="NIGHT";
  mystyle.color="blue";
}


ReactDOM.render(
<h1 className="heading" style={mystyle}>
{"GOOD" +ans}
</h1>,
document.getElementById("root"));
